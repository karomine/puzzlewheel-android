<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="12dp"
    android:layout_height="match_parent"
    tools:context="romine.colorwheel.Game.GameActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/move_left"
        android:src="@android:drawable/ic_media_rew"
        style="@style/Widget.AppCompat.Button.Small"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/move_left"
        android:layout_toRightOf="@+id/move_left"
        android:layout_toEndOf="@+id/move_left"
        android:id="@+id/move_right"
        android:src="@android:drawable/ic_media_ff"
        style="@style/Widget.AppCompat.Button.Small"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/move_right"
        android:layout_toEndOf="@+id/move_right"
        android:src="@android:drawable/ic_menu_compass"
        android:id="@+id/new_game"
        style="@style/Widget.AppCompat.Button.Small"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/new_game"
        android:layout_toEndOf="@+id/new_game"
        android:src="@android:drawable/ic_menu_manage"
        android:id="@+id/settings"
        style="@style/Widget.AppCompat.Button.Small"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
